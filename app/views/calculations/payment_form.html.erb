<form action="/payment/results" method="get">
  <label for="apr">APR (%):</label>
  <input type="text" id="apr" name="apr" placeholder="E.g. 5.42" required><br><br>

  <label for="years">Number of years:</label>
  <input type="text" id="years" name="years" placeholder="How many years to repay?" required><br><br>

  <label for="present_value">Principal:</label>
  <input type="text" id="present_value" name="present_value" placeholder="How much principal?" required><br><br>

  <button type="submit">Calculate monthly pay</button>
</form>
